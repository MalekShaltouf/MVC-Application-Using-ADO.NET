@using DataAccess.Models
@model User
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
<section class="container" style="margin-top:15px">
    <div class="form-group">
        @Html.Label("User Name")
        @Html.TextBoxFor(user => user.USER_NAME, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.USER_NAME, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Password")
        @Html.TextBoxFor(user => user.PASSWORD, new { @class = "form-control", type = "password" })
        @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div style="margin-top:15px">
        @Html.ValidationMessage("validation-error", new { @class = "text-danger" })
    </div>
</section>
}

